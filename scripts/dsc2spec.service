<service name="dsc2spec">
    <summary>Create a RPM specfile based on Debian *.dsc</summary>
    <description>This service takes a Debian source package and converts it to a RPM spec file.</description>
    <parameter name="filename">
        <description>The name of the output RPM specfile</description>
        <required/>
    </parameter>
    <parameter name="deb-build-options">
        <description>The value of the DEB_BUILD_OPTIONS environment variable.</description>
    </parameter>
</service>
